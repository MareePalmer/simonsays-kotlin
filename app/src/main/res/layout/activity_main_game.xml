<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".MainGameActivity">

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:id="@+id/button_red"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_green"
            app:layout_constraintEnd_toStartOf="@+id/button_blue" android:layout_marginEnd="8dp"
            android:background="@drawable/button_red"
            app:layout_constraintTop_toBottomOf="@+id/button_pause" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_blue" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_red"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="0.93" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_yellow"
            android:background="@drawable/button_blue"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/button_pause"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_green" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button_red"
            app:layout_constraintEnd_toStartOf="@+id/button_yellow" android:layout_marginEnd="8dp"
            android:background="@drawable/button_green"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/button_yellow" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_blue" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.935"
            app:layout_constraintVertical_bias="0.661" app:layout_constraintStart_toEndOf="@+id/button_green"
            android:background="@drawable/button_yellow"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_media_pause"
            android:layout_height="wrap_content"
            android:clickable="true" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/button_pause"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/button_red"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_width="wrap_content" app:backgroundTint="@android:color/darker_gray"/>
</android.support.constraint.ConstraintLayout>